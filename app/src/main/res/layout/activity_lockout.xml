<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lock"
    android:backgroundTint="#98FFFFFF"
    android:backgroundTintMode="src_over"
    tools:context=".Lockout">

    <TextView
        android:id="@+id/textView4"
        style="@android:style/Widget.Holo.Light.TextView"
        android:layout_width="383dp"
        android:layout_height="71dp"
        android:layout_marginHorizontal="20dp"
        android:font="@font/medium"
        android:text="You have been locked out of your account."
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@android:color/background_dark"
        android:textColorLink="@android:color/widget_edittext_dark"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.351" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="383dp"
        android:layout_height="71dp"
        android:layout_marginHorizontal="18dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="12dp"
        android:font="@font/medium"
        android:text="Please contant your bank for futher information."
        android:textColor="@android:color/background_dark"
        android:textColorLink="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintVertical_bias="0.014" />

</androidx.constraintlayout.widget.ConstraintLayout>